{% extends '_base.html.twig' %}


{% block body %}
    <div class="column_container">
        <section class="fixed">

            <h2>Service User Edit Page</h2>

            {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
            <input class="button-green" type="submit" value="Submit Changes"/>
    {{ form_end(edit_form) }}
    <ul>
        <li>
            <a href="{{ path('serviceuser_index') }}" class="button-grey">Back to the Service
                Users list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="button-red" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
        </section>
        <section class="flex">
            <section>
                <p>`
                    <iframe
                            width=450"
                            height="600"
                            frameborder="1" style="border:1px"
                            src="http://maps.google.com/maps?q={{ serviceUser.latitude }},{{ serviceUser.longtitude }}&z=13&output=embed"></iframe>

                </p>
            </section>
            <section class="flex">
                <table>
                    <th>Latitude</th>
                    <th>Longtitude</th>
                    <th></th>
                    <tr>
                        <td>{{ serviceUser.latitude }}</td>
                        <td>{{ serviceUser.longtitude }}</td>
                        <td>
                            <a href="{{ path('serviceuser_getcoordinates', { 'id': serviceUser.id }) }}"
                               class="btn btn-success btn-sm"
                               role="button">Geocode</a>
                        </td>
                    </tr>
                </table>
            </section>
        </section>
    </div>
{% endblock %}


