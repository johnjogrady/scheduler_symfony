{% extends '_base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="button-blue" href="{{ path('user_show', { 'id': user.id }) }}">View</a>
                        </li>
                        <li>
                            <a class="button-orange" href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="button-green" href="{{ path('user_register') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
