{% extends '_base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Role</th>
            <td>{{ user.role }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="button-grey" href="{{ path('user_index') }}">Back to the User list</a>
        </li>
        <li>
            <a class="button-orange" href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="button-red" type="submit" value="Delete User">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
