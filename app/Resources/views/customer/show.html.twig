{% extends '_base.html.twig' %}

{% block body %}
    <h2>Customer Details</h2>

    <table>
        <tbody>
        <tr>
            <th>Customer name</th>
            <td>{{ customer.customerName }}</td>
        </tr>
        <tr>
            <th>Address line1</th>
            <td>{{ customer.addressLine1 }}</td>
        </tr>
        <tr>
            <th>Address line2</th>
            <td>{{ customer.addressLine2 }}</td>
        </tr>
        <tr>
            <th>Address line3</th>
            <td>{{ customer.addressLine3 }}</td>
        </tr>
        <tr>
            <th>County/Postcode</th>
            <td>{{ customer.countyPostcode }}</td>
        </tr>
        <tr>
            <th>Eircode</th>
            <td>{{ customer.eirCode }}</td>
        </tr>
        <tr>
            <th>Landline telephone</th>
            <td>{{ customer.landlineTelephone }}</td>
        </tr>
        <tr>
            <th>Mobile telephone</th>
            <td>{{ customer.mobileTelephone }}</td>
        </tr>
        <tr>
            <th>Managing Office</th>
            <td>{{ customer.managingOffice }}</td>
        </tr>

        <tr>
            <th>Is Active</th>
            <td>{% if customer.isActive %}Yes{% else %}No{% endif %}</td>
        </tr>
        <tr>
            <th>Main Contact</th>
            <td>{{ customer.mainContact }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="button-grey" href="{{ path('customer_index') }}">Back to the Customer
                list</a>
        </li>
        <li>
            <a class="button-orange" href="{{ path('customer_edit', { 'id': customer.id }) }}">Edit This Record</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="button-red">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
