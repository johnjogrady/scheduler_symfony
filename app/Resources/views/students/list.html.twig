{% extends '_base.html.twig' %}

{% block pageTitle %}list of students{% endblock %}

{% block body %}

    {{ dump() }}

    <hr>
    <a href="{{ path('students_new_form') }}">
        create NEW student
    </a>
    <ul>
        {% for student in students %}
            <li>
                id = {{ student.id }}
                <br>
                name = {{ student.name }}

                <a href="{{ path('students_show', {id:student.id}) }}">
                    {{ student.name }}
                </a>
            </li>
        {% endfor %}


    </ul>

{% endblock %}