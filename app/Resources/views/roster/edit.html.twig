{% extends '_base.html.twig' %}

{% block body %}
    <h1>Roster edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="Submit Changes" class="btn btn-success btn-sm" role="button"/>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('roster_index') }}" class="btn btn-success btn-sm" role="button">Back to the Rosters
                list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete This Roster" class="btn btn-success btn-sm" role="button">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
