{% extends '_base.html.twig' %}

{% block body %}
    <h1>Roster edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input class="button-green" type="submit" value="Submit Changes"/>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a class="button-blue" href="{{ path('roster_index') }}">Back to the Rosters
                list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="button-red" type="submit" value="Delete This Roster" role="button">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
