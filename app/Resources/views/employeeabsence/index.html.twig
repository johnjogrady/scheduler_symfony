{% extends '_base.html.twig' %}
{% block body %}
    <h1>Employeeabsences list</h1>

    <table>
        <thead>
        <tr>
            <th>Employee</th>
            <th>Starttime</th>
            <th>Endtime</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for employeeAbsence in employeeAbsences %}
            <tr>
                <td>
                    {{ employeeAbsence.employeeId }}
                </td>
                <td>{% if employeeAbsence.startTime %}{{ employeeAbsence.startTime|date('D d-m-y H:i:s') }}{% endif %}</td>
                <td>{% if employeeAbsence.endTime %}{{ employeeAbsence.endTime|date('D d-m-y H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a class="button-blue"
                               href="{{ path('employeeabsence_show', { 'id': employeeAbsence.id }) }}">show</a>
                        </li>
                        <li>
                            <a class="button-orange"
                               href="{{ path('employeeabsence_edit', { 'id': employeeAbsence.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
