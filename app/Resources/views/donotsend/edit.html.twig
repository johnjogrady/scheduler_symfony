{% extends '_base.html.twig' %}

{% block body %}
    <h3>Update the Employee marked as Do Not Send to this Service User</h3>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input class="button-green" type="submit" value="Submit Changes"/>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a class="button-grey" href="{{ path('donotsend_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="button-red" type="submit" value="Remove Do Not Send Flag" role="button">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
