<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>

    <title>Scheduler - {% block pageTitle %}{% endblock %}</title>
    <style>
        @import '/css/flash.css';
        @import '/css/style.css';
        @import '/css/aside.css';
        @import "/css/nav.css";
        @import "/css/layout.css";

        {% block stylesheets %}
        label {
            display: inline-flex;
            float: left;
            width: 3rem;
            padding-right: 0.5rem;
            font-weight: bold;
            color: blue;
            text-align: right;
        }


    </style>
    {% endblock %}
    {% block body %}
        <a><img src="../images/iwalogo2017.png" alt="IWA logo"></a>
        <div class="column_container">
            <section class="flex">

                <h1> Welcome to the IWA Assisted Living Scheduler App</h1>

            </section>
        </div>

        <a><img src="../images/carericon.jpg" alt="carer icon" height="250" width="250"></a>

        <ul>
            <li>
            <a href="{{ path('office_index') }}">

                <img src="/images/department.png" alt="Office" height="32" width="32"></a>

                <a href="{{ path('office_index') }}" class="btn btn-success" role="button">Get Started</a>
            </li>
            {#
                        <a href="{{ path('security_login') }}">

                            <img src="/images/login.png" alt="customer" height="48" width="48"></a>

                        <a href="{{ path('security_login') }}" class="btn btn-info" role="button">Login</a>
            #}
        <li>

            <a href="https://irishwheelchairassociation.samanage.com">

                <img src="/images/help.png" alt="help" height="32" width="32"></a>

            <a href="https://irishwheelchairassociation.samanage.com/" class="btn btn-default" role="button">Get Help
                from IWA ICT Support</a>
        </li>
    </ul>

        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <a href="{{ path('security_logout') }}">
                <a class="btn btn-default btn"> You are currently logged in as {{ app.user }}</a>
                <img src="/images/logout.png" alt="customer" height="32" width="32"></a>
            <a href="{{ path('security_logout') }}" class="btn btn-primary" role="button">Logout</a>
        {% endif %}
{% endblock %}

</head>
</html>